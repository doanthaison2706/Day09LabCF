@model ĐTSDay9Lesson.Models.DtsSanPham

@{
    ViewData["Title"] = "Tạo mới sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Thêm sản phẩm mới</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="DTSMaSanPham" class="form-label fw-semibold"></label>
                    <input asp-for="DTSMaSanPham" class="form-control" placeholder="Nhập mã sản phẩm" />
                    <span asp-validation-for="DTSMaSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DTSTenSanPham" class="form-label fw-semibold"></label>
                    <input asp-for="DTSTenSanPham" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="DTSTenSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DTSHinhAnh" class="form-label fw-semibold">Chọn hình ảnh</label>
                    <input type="file" name="HinhAnhFile" accept="image/*" class="form-control" id="uploadImage" />
                    <div class="mt-2 text-center">
                        <img id="previewImage" src="#" alt="Xem trước ảnh" class="img-fluid rounded-3 d-none border" style="max-height: 200px;" />
                    </div>
                    <span asp-validation-for="DTSHinhAnh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DTSSoLuong" class="form-label fw-semibold"></label>
                    <input asp-for="DTSSoLuong" class="form-control" placeholder="Nhập số lượng" />
                    <span asp-validation-for="DTSSoLuong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DTSDonGia" class="form-label fw-semibold"></label>
                    <input asp-for="DTSDonGia" class="form-control" placeholder="Nhập đơn giá" />
                    <span asp-validation-for="DTSDonGia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DTSLoaiSanPhamId" class="form-label fw-semibold"></label>
                    <input asp-for="DTSLoaiSanPhamId" class="form-control" placeholder="Nhập mã loại sản phẩm" />
                    <span asp-validation-for="DTSLoaiSanPhamId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-plus-circle"></i> Tạo mới
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Xem trước ảnh
        document.getElementById('uploadImage').addEventListener('change', function (e) {
            const [file] = e.target.files;
            if (file) {
                const img = document.getElementById('previewImage');
                img.src = URL.createObjectURL(file);
                img.classList.remove('d-none');
            }
        });
    </script>
}
